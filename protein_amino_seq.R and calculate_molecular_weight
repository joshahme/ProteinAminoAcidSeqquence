# Method to determine amino acid sequence for S3 class
protein_amino_seq <- function(protein_sequence) {
  amino_acid_sequence <- toupper(protein_sequence)
  return(amino_acid_sequence)
}

# Method to calculate molecular weight for S4 class
calculate_molecular_weight <- function(protein_object) {
  mol_weight <- nchar(protein_object@sequence)
  return(mol_weight)
}
